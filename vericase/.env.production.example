# VeriCase - Production Environment
# ==================================
# Copy this file to .env.production and fill in your actual values
# .env.production should NEVER be committed to version control
# Use AWS Secrets Manager or similar for sensitive production values

# Environment Type
ENVIRONMENT=production
USE_AWS_SERVICES=true

# AWS Configuration
AWS_REGION=eu-west-2
AWS_DEFAULT_REGION=eu-west-2
AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID

# SECURITY: In production, use IAM roles/IRSA instead of access keys
# Do not set AWS_ACCESS_KEY_ID or AWS_SECRET_ACCESS_KEY in production

# S3 Storage
MINIO_BUCKET=vericase-docs-YOUR_ACCOUNT_ID
S3_BUCKET=vericase-docs-YOUR_ACCOUNT_ID
KNOWLEDGE_BASE_BUCKET=vericase-knowledge-base-YOUR_ACCOUNT_ID
MINIO_ENDPOINT=
MINIO_PUBLIC_ENDPOINT=

# Database - AWS RDS PostgreSQL
DATABASE_URL=postgresql+psycopg2://USERNAME:PASSWORD@RDS_ENDPOINT:5432/DATABASE_NAME

# OpenSearch - OPTIONAL
OPENSEARCH_HOST=YOUR_OPENSEARCH_ENDPOINT
OPENSEARCH_PORT=443
OPENSEARCH_USE_SSL=true
OPENSEARCH_VERIFY_CERTS=true
OPENSEARCH_INDEX=emails

# Redis - AWS ElastiCache
REDIS_URL=redis://YOUR_ELASTICACHE_ENDPOINT:6379/0
CELERY_QUEUE=pst-processing

# Apache Tika - OPTIONAL
TIKA_URL=http://tika:9998

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
JWT_SECRET=GENERATE_SECURE_RANDOM_64_CHARACTER_SECRET_USING_OPENSSL
JWT_ISSUER=vericase-pst-analysis
JWT_EXPIRE_MIN=7200

# Admin Account
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=GENERATE_SECURE_PASSWORD_AND_HASH_IT

# Email Settings (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_FROM=noreply@yourdomain.com
EMAIL_HOST_USER=YOUR_EMAIL
EMAIL_HOST_PASSWORD=YOUR_APP_PASSWORD

# AWS Bedrock Knowledge Base (optional)
BEDROCK_KB_ID=
BEDROCK_DS_ID=
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v1

# AWS Lambda Functions (optional)
TEXTRACT_PROCESSOR_FUNCTION=arn:aws:lambda:REGION:ACCOUNT:function:FUNCTION_NAME

# AWS EventBridge (optional)
EVENT_BUS_NAME=vericase-events

# AWS Textract
USE_TEXTRACT=true
AWS_REGION_FOR_TEXTRACT=eu-west-2
USE_COMPREHEND=true
USE_KNOWLEDGE_BASE=true

# AI Feature Flags - ALL ENABLED FOR PRODUCTION
ENABLE_AI_AUTO_CLASSIFY=true
ENABLE_AI_DATASET_INSIGHTS=true
ENABLE_AI_NATURAL_LANGUAGE_QUERY=true
AI_DEFAULT_MODEL=gemini
AI_WEB_ACCESS_ENABLED=true
AI_TASK_COMPLEXITY_DEFAULT=advanced

# Multi-vector semantic search
MULTI_VECTOR_ENABLED=true

# Embedding provider (bedrock or sentence-transformers)
EMBEDDING_PROVIDER=bedrock

# AI Model API Keys
# SECURITY: Use AWS Secrets Manager in production (STRONGLY RECOMMENDED)
# Secret name: vericase/ai-api-keys
AWS_SECRETS_MANAGER_AI_KEYS=vericase/ai-api-keys
# See AI_KEY_MANAGEMENT.md for complete setup instructions

# Or set directly (not recommended - only for testing):
# GEMINI_API_KEY=
# CLAUDE_API_KEY=
# OPENAI_API_KEY=
# GROK_API_KEY=
# PERPLEXITY_API_KEY=

# SigParser Email Threading API
SIGPARSER_API_KEY=
SIGPARSER_BASE_URL=https://ipaas.sigparser.com
SIGPARSER_ENABLED=true

# AWS Lambda Functions
LAMBDA_TEXTRACT_PROCESSOR=vericase-textract-processor
LAMBDA_COMPREHEND_ANALYZER=vericase-comprehend-analyzer
LAMBDA_DOCUMENT_CLASSIFIER=vericase-document-classifier
LAMBDA_DATABASE_UPDATER=vericase-database-updater
LAMBDA_KB_INGESTER=vericase-kb-ingester

# AWS S3 Buckets (additional)
S3_TRANSCRIBE_OUTPUT_BUCKET=vericase-transcribe-YOUR_ACCOUNT_ID

# AWS OpenSearch Serverless
OPENSEARCH_COLLECTION_ARN=
OPENSEARCH_COLLECTION_ENDPOINT=
OPENSEARCH_VECTOR_INDEX=vericase-evidence-index

# AWS QuickSight Analytics
QUICKSIGHT_DASHBOARD_ID=
QUICKSIGHT_DATASET_ID=

# Monitoring and Ops (optional)
EKS_CLUSTER_NAME=
RDS_INSTANCE_ID=
CLOUDWATCH_LOG_GROUP=/aws/vericase/production

# Python Settings
PYTHONUNBUFFERED=1
DEV_NO_AUTH=false
