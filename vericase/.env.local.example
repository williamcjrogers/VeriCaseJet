# VeriCase - Local Development Environment
# ==========================================
# Copy this file to .env.local and fill in your actual values
# .env.local is gitignored and will not be committed

# Environment Type
ENVIRONMENT=local
USE_AWS_SERVICES=false

# S3/MinIO settings (for local development with docker-compose)
MINIO_ENDPOINT=http://minio:9000
MINIO_PUBLIC_ENDPOINT=http://localhost:9002
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=changeme123
MINIO_BUCKET=vericase-docs
S3_BUCKET=vericase-docs
S3_ENDPOINT=http://localhost:9002
S3_ACCESS_KEY=admin
S3_SECRET_KEY=changeme123
AWS_REGION=eu-west-2

# Database - PostgreSQL in Docker
DATABASE_URL=postgresql+psycopg2://vericase:vericase@localhost:55432/vericase

# OpenSearch settings
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_INDEX=emails

# Redis + Celery
REDIS_URL=redis://localhost:6379/0
CELERY_QUEUE=pst-processing

# PST ingestion performance
PST_PRECOUNT_MESSAGES=true

# Apache Tika
TIKA_URL=http://tika:9998

# API settings
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:8010,http://localhost:3000
JWT_SECRET=dev_ONLY_replace_me_with_a_real_64_char_secret_1234567890abcd
JWT_ISSUER=vericase-pst-analysis
JWT_EXPIRE_MIN=7200

# AI Model API Keys (DO NOT commit real keys - use .env.local)
GEMINI_API_KEY=
CLAUDE_API_KEY=
OPENAI_API_KEY=
GROK_API_KEY=
PERPLEXITY_API_KEY=

# SigParser Email Threading API
SIGPARSER_API_KEY=
SIGPARSER_BASE_URL=https://api.sigparser.com
SIGPARSER_ENABLED=false

# AI Feature Flags - ALL ENABLED
ENABLE_AI_AUTO_CLASSIFY=true
ENABLE_AI_DATASET_INSIGHTS=true
ENABLE_AI_NATURAL_LANGUAGE_QUERY=true
AI_DEFAULT_MODEL=gemini
AI_WEB_ACCESS_ENABLED=true
AI_TASK_COMPLEXITY_DEFAULT=advanced

# Multi-vector semantic search
MULTI_VECTOR_ENABLED=true

# AWS Enhanced Features (Disabled for local dev, enable for AWS testing)
USE_TEXTRACT=false
USE_COMPREHEND=false
USE_KNOWLEDGE_BASE=false
BEDROCK_ENABLED=false

# Additional AI Providers (add keys to enable)
# Get keys from: see AI_KEY_MANAGEMENT.md
# - Grok: https://console.x.ai/
# - Perplexity: https://www.perplexity.ai/settings/api
