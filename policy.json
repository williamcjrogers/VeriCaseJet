{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AWSCloudTrailAclCheck",
            "Effect": "Allow",
            "Principal": {"Service": "cloudtrail.amazonaws.com"},
            "Action": "s3:GetBucketAcl",
            "Resource": "arn:aws:s3:::vericase-cloudtrail-logs-526015377510",
            "Condition": {"StringEquals": {"AWS:SourceArn": "arn:aws:cloudtrail:eu-west-2:526015377510:trail/vericase-management-trail"}}
        },
        {
            "Sid": "AWSCloudTrailWrite",
            "Effect": "Allow",
            "Principal": {"Service": "cloudtrail.amazonaws.com"},
            "Action": "s3:PutObject",
            "Resource": "arn:aws:s3:::vericase-cloudtrail-logs-526015377510/AWSLogs/526015377510/*",
            "Condition": {
                "StringEquals": {
                    "s3:x-amz-acl": "bucket-owner-full-control",
                    "AWS:SourceArn": "arn:aws:cloudtrail:eu-west-2:526015377510:trail/vericase-management-trail"
                }
            }
        }
    ]
}
