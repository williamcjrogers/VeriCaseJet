# Copy this to .env.production and fill in your actual values

# Core Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=*.awsapprunner.com

# Database (Use AWS RDS PostgreSQL)
DATABASE_URL=postgresql://username:password@your-rds-endpoint.amazonaws.com:5432/vericase

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=vericase-production
AWS_S3_REGION_NAME=us-east-1

# Redis (Use AWS ElastiCache)
REDIS_URL=redis://your-elasticache-endpoint.amazonaws.com:6379

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_FROM=noreply@vericase.com

# AI API Keys
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
GEMINI_API_KEY=your-gemini-key
GROK_API_KEY=your-grok-key

# Admin Account
ADMIN_EMAIL=admin@vericase.com
ADMIN_PASSWORD=change-this-immediately

# Website Integration
WEBSITE_URL=https://veri-case.com
APP_URL=https://your-app-id.awsapprunner.com