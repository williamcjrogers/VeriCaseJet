# =========================================
# VeriCase Production Configuration Example
# =========================================
# Copy this to .env and fill in your values
# NEVER commit the actual .env file!

# =========================================
# Database Configuration (PostgreSQL)
# =========================================
# Format: postgresql+psycopg2://user:password@host:port/database
DATABASE_URL=postgresql+psycopg2://vericase:secure_password_here@postgres:5432/vericase

# For external PostgreSQL (e.g., AWS RDS):
# DATABASE_URL=postgresql+psycopg2://vericase:password@your-rds-endpoint.amazonaws.com:5432/vericase

# =========================================
# Object Storage Configuration
# =========================================
# Option 1: MinIO (local/self-hosted)
USE_AWS_SERVICES=false
MINIO_ENDPOINT=http://minio:9000
MINIO_PUBLIC_ENDPOINT=http://localhost:9001
MINIO_ACCESS_KEY=vericase_access
MINIO_SECRET_KEY=secure_secret_here
MINIO_BUCKET=vericase-files
S3_BUCKET=vericase-files

# Option 2: AWS S3 (production)
# USE_AWS_SERVICES=true
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_DEFAULT_REGION=us-east-1
# S3_BUCKET=vericase-pst-storage
# MINIO_BUCKET=vericase-pst-storage
# MINIO_ENDPOINT=

# =========================================
# Cache & Message Queue
# =========================================
REDIS_URL=redis://redis:6379/0

# For external Redis (e.g., AWS ElastiCache):
# REDIS_URL=redis://your-redis-endpoint.cache.amazonaws.com:6379/0

# =========================================
# Search Engine (OpenSearch)
# =========================================
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_INDEX=vericase_documents

# For production OpenSearch:
# OPENSEARCH_HOST=your-opensearch-domain.region.es.amazonaws.com
# OPENSEARCH_PORT=443
# OPENSEARCH_USE_SSL=true
# OPENSEARCH_VERIFY_CERTS=true

# =========================================
# Document Processing
# =========================================
TIKA_URL=http://tika:9998
CELERY_QUEUE=vericase
CELERY_PST_QUEUE=pst_processing

# =========================================
# API Configuration
# =========================================
API_HOST=0.0.0.0
API_PORT=8010

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8010,https://vericase.yourdomain.com

# =========================================
# Authentication & Security
# =========================================
# JWT Secret Key (generate with: openssl rand -hex 64)
JWT_SECRET=your-64-character-hex-secret-here
JWT_SECRET_KEY=your-64-character-hex-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MIN=7200
JWT_EXPIRY_HOURS=24
JWT_ISSUER=vericase

# Security Settings
PASSWORD_RESET_HOURS=24
EMAIL_VERIFY_DAYS=7
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MIN=30
SESSION_REMEMBER_DAYS=30

# =========================================
# AI Services (Optional)
# =========================================
# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_API_KEY=sk-ant-...

# Google Gemini
GOOGLE_API_KEY=AIza...
GEMINI_API_KEY=AIza...

# Grok
GROK_API_KEY=...

# Perplexity
PERPLEXITY_API_KEY=...

# AI Feature Flags
ENABLE_AI_AUTO_CLASSIFY=true
ENABLE_AI_DATASET_INSIGHTS=true
ENABLE_AI_NATURAL_LANGUAGE_QUERY=true
AI_DEFAULT_MODEL=gemini

# =========================================
# Application Settings
# =========================================
# Company/Organization Settings
DEFAULT_COMPANY_NAME=Your Company Name
DEFAULT_STORAGE_LIMIT_GB=100
SUBSCRIPTION_TIER=professional

# File Size Limits
MAX_UPLOAD_SIZE_MB=50000  # 50GB for PST files
MAX_ATTACHMENT_SIZE_MB=100

# Processing Settings
PST_CHUNK_SIZE=1000  # Emails per processing chunk
PST_WORKER_CONCURRENCY=4

# =========================================
# Monitoring & Logging
# =========================================
LOG_LEVEL=INFO
SENTRY_DSN=

# =========================================
# Email Configuration (Optional)
# =========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@vericase.com
SMTP_PASS=your-smtp-password
EMAIL_FROM=VeriCase <noreply@vericase.com>
FRONTEND_URL=https://your-domain.com

# =========================================
# Development/Debug Settings
# =========================================
# Set to true only in development
DEBUG=false
RELOAD=false

# =========================================
# Docker-specific Settings
# =========================================
# These are used by docker-compose
POSTGRES_USER=vericase
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=vericase

# =========================================
# Deployment-specific Settings
# =========================================
# Railway.app specific
PORT=8010

# AWS Deployment
AWS_REGION=us-east-1

# =========================================
# Backup Configuration (Optional)
# =========================================
BACKUP_S3_BUCKET=vericase-backups
BACKUP_RETENTION_DAYS=30

# =========================================
# NOTES
# =========================================
# 1. Generate secure passwords with: openssl rand -base64 32
# 2. Generate JWT secret with: openssl rand -hex 64
# 3. In production, use environment-specific .env files
# 4. Use secrets management service (AWS Secrets Manager, etc.) for sensitive data
# 5. Ensure all URLs use HTTPS in production
# 6. Set up proper CORS origins for your domain
