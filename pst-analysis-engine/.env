# ============================================
# AWS CONFIGURATION
# ============================================
USE_AWS_SERVICES=false
AWS_REGION=eu-west-2

# ============================================
# LOCAL DOCKER SERVICES
# ============================================
# Database
DATABASE_URL=postgresql+psycopg2://vericase:vericase@postgres:5432/vericase

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# OpenSearch
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_INDEX=documents

# MinIO (Local S3)
MINIO_ENDPOINT=minio:9000
MINIO_PUBLIC_ENDPOINT=localhost:9002
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=changeme123
MINIO_BUCKET=vericase-docs
MINIO_USE_SSL=false

# Tika
TIKA_URL=http://tika:9998

# ============================================
# SECURITY
# ============================================
JWT_SECRET=dev-secret-key-change-in-production-min-32-chars
SESSION_SECRET=dev-session-key-change-in-production

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:8010,http://localhost:5173

# ============================================
# AI FEATURES
# ============================================
ENABLE_AI_AUTO_CLASSIFY=true
ENABLE_AI_DATASET_INSIGHTS=true
ENABLE_AI_NATURAL_LANGUAGE_QUERY=true

# ============================================
# AMAZON BEDROCK - VERICASE OPTIMIZED
# ============================================
# Credentials managed by AWS CLI (already configured)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-2

# Task-specific model routing for VeriCase:
# 1. AI Chat/Copilot (Deep Research) - Use Nova Pro for gap analysis
BEDROCK_CHAT_MODEL=amazon.nova-pro-v1:0

# 2. AI Refinement (Data Filtering) - Use Nova Lite for analysis
BEDROCK_REFINEMENT_MODEL=amazon.nova-lite-v1:0

# 3. AI Orchestrator (Dataset Insights) - Use Nova Lite for speed
BEDROCK_ORCHESTRATOR_MODEL=amazon.nova-lite-v1:0

# 4. Quick Search - Use Nova Micro for fast responses
BEDROCK_QUICK_SEARCH_MODEL=amazon.nova-micro-v1:0

# 5. Embeddings (Semantic Search) - Use Titan v2
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0

# Default fallback model
BEDROCK_DEFAULT_MODEL=amazon.nova-lite-v1:0
BEDROCK_REGION=eu-west-2
