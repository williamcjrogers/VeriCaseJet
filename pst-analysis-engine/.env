# ============================================
# AWS CONFIGURATION
# ============================================
USE_AWS_SERVICES=false
AWS_REGION=eu-west-2

# ============================================
# LOCAL DOCKER SERVICES
# ============================================
# Database
DATABASE_URL=postgresql+psycopg2://vericase:vericase@postgres:5432/vericase

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# OpenSearch
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_INDEX=documents

# MinIO (Local S3)
MINIO_ENDPOINT=minio:9000
MINIO_PUBLIC_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=changeme123
MINIO_BUCKET=vericase-docs
MINIO_USE_SSL=false

# Tika
TIKA_URL=http://tika:9998

# ============================================
# SECURITY
# ============================================
JWT_SECRET=dev-secret-key-change-in-production-min-32-chars
SESSION_SECRET=dev-session-key-change-in-production

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:8010,http://localhost:5173

# ============================================
# AI FEATURES (Disabled for local)
# ============================================
ENABLE_AI_AUTO_CLASSIFY=false
ENABLE_AI_DATASET_INSIGHTS=false
ENABLE_AI_NATURAL_LANGUAGE_QUERY=false
