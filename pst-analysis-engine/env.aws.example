# AWS Configuration Example
# Copy this to .env and fill in your credentials

# AWS Credentials (never commit these!)
AWS_ACCESS_KEY_ID=your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-key-here
AWS_DEFAULT_REGION=us-east-1

# Enable AWS S3 instead of MinIO
USE_AWS_SERVICES=true
USE_AWS_S3=true

# S3 Bucket Configuration
AWS_S3_BUCKET=vericase-pst-storage
S3_BUCKET=vericase-pst-storage
MINIO_BUCKET=vericase-pst-storage

# Leave MINIO_ENDPOINT empty to trigger AWS mode
MINIO_ENDPOINT=

# Keep other services as local Docker
DATABASE_URL=postgresql+psycopg2://vericase:vericase@localhost:55432/vericase
REDIS_URL=redis://localhost:56379/0
OPENSEARCH_URL=http://localhost:59200
TIKA_URL=http://localhost:59998

# API Settings
API_HOST=0.0.0.0
API_PORT=8010
CORS_ORIGINS=http://localhost:8010,http://localhost:3000,http://localhost:8080

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# AI API Keys (optional)
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
GOOGLE_API_KEY=your-google-key
