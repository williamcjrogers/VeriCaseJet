# AWS Production Environment Configuration
# ==========================================

# AWS Mode - use S3 instead of MinIO
USE_AWS_SERVICES=true
AWS_REGION=eu-west-2
AWS_DEFAULT_REGION=eu-west-2

# S3 Storage (MINIO_BUCKET is used as the main bucket name internally)
MINIO_BUCKET=vericase-docs-526015377510
S3_BUCKET=vericase-docs-526015377510
MINIO_ENDPOINT=
MINIO_PUBLIC_ENDPOINT=

# Database - REQUIRED
DATABASE_URL=postgresql+psycopg2://vericase:vericase@postgres:5432/vericase

# JWT Secret - REQUIRED (minimum 32 characters)
JWT_SECRET=vericase-jwt-secret-key-change-in-production-min-32-chars

# CORS - allow all origins for now
CORS_ORIGINS=*

# AWS Bedrock Knowledge Base
BEDROCK_KB_ID=ACKHIYIHPK
BEDROCK_DS_ID=D9BX79MBSG

# AI Features
ENABLE_AI_AUTO_CLASSIFY=true
ENABLE_AI_DATASET_INSIGHTS=true
ENABLE_AI_NATURAL_LANGUAGE_QUERY=true

# Redis (ElastiCache)
REDIS_URL=redis://clustercfg.vericase-redis.dbbgbx.euw2.cache.amazonaws.com:6379/0

# OpenSearch
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200

# Tika
TIKA_URL=http://tika:9998

# Textract
USE_TEXTRACT=true
AWS_REGION_FOR_TEXTRACT=eu-west-2
